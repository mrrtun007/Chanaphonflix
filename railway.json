{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd Chanaphonflix && dotnet publish -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd Chanaphonflix/out && dotnet Chanaphonflix.dll",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
